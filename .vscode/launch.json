{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev PowerShell",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/debug/pwsh",
            "preLaunchTask": "Build",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceRoot}",
            "justMyCode": true,
            "allowFastEvaluate": true,
            "enableStepFiltering": true,
            "logging": {
              "moduleLoad": false // Suppresses "Just My Code" warnings
            },
            "stopAtEntry": false,
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "justMyCode": false,
            "processId": "${command:pickProcess}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "PowerShell Launch Current File w/Args Prompt",
            "script": "${file}",
            "args": [
                "${command:SpecifyScriptArgs}"
            ],
            "cwd": "${file}"
        }
    ]
}
